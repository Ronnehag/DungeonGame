@model RegisterAccount

<form method="post" data-ajax="true"
      data-ajax-method="post"
      data-ajax-update="#registerForm"
      asp-controller="Account" asp-action="RegisterAccount" id="registerForm">

    <div class="row h-100">
        <div class="col-sm-12 col-md-6 col-lg-6 mx-auto">
            <div class="row">
                <div class="col-sm-12 col-md-6 col-lg-6">
                    <div class="form-group">
                        <label asp-for="UserName"></label>
                        <input class="form-control form-control-sm" asp-for="UserName" maxlength="50" />
                        <small><span asp-validation-for="UserName"></span></small>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label asp-for="Password"></label>
                    <input class="form-control form-control-sm" asp-for="Password" />
                    <small><span asp-validation-for="Password"></span></small>
                </div>
                <div class="col">
                    <label asp-for="ConfirmPassword"></label>
                    <input class="form-control form-control-sm" asp-for="ConfirmPassword" />
                    <small><span asp-validation-for="ConfirmPassword"></span></small>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col">
                    <label asp-for="Email"></label>
                    <input class="form-control form-control-sm" asp-for="Email" />
                    <small><span asp-validation-for="Email"></span></small>
                </div>
                <div class="col">
                    <label asp-for="ConfirmEmail"></label>
                    <input class="form-control form-control-sm" asp-for="ConfirmEmail" />
                    <small><span asp-validation-for="ConfirmEmail"></span></small>
                </div>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-secondary">Register</button>
            </div>
        </div>
    </div>
</form>