@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-6 mx-auto">
            <form class="mt-5" method="post" asp-controller="Account" asp-action="Login">
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input class="form-control form-control-sm" placeholder="username" asp-for="Username" />
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input class="form-control form-control-sm" placeholder="password" asp-for="Password" />
                </div>
                <div class="text-center">
                    <button class="btn btn-login btn-sm">Log in</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-6 mx-auto text-center mt-5">
            <div asp-validation-summary="All"></div>
        </div>
    </div>
</div>
