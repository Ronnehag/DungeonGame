@using Dungeon.Data.Identity
@using Microsoft.AspNetCore.Identity
@model AccountDetailsViewModel

@{
    ViewData["Title"] = "AccountDetails";
}

<div class="container-fluid mt-5">
   
    <h1>AccountDetails</h1>
    
    <form asp-controller="Account" asp-action="AccountDetails" method="post" class="mt-5">
        <div class="row">
            <div class="col-6 col-sm-4 col-md-4 col-lg-4 form-group">
                <label>Username</label>
                <input class="form-control" asp-for="UserName" readonly/>
            </div>
        </div>
        
        <div class="row">
            <div class="col-6 col-sm-4 col-md-4 col-lg-4 form-group">
                <label asp-for="CurrentEmail"></label>
                <input class="form-control" asp-for="CurrentEmail" readonly/>
            </div>
            <div class="col-6 col-sm-4 col-md-4 col-lg-4 form-group">
                <label asp-for="NewEmail"></label>
                <input class="form-control" asp-for="NewEmail" />
                <small><span asp-validation-for="NewEmail"></span></small>
            </div>
        </div>
        
        <div class="row">
            <div class="col-6 col-sm-4 col-md-4 col-lg-4 form-group">
                <label asp-for="NewPassword"></label>
                <input class="form-control" asp-for="NewPassword"/>
                <small><span asp-validation-for="NewPassword"></span></small>

            </div>
            <div class="col-6 col-sm-4 col-md-4 col-lg-4 form-group">
                <label asp-for="ConfirmNewPassword"></label>
                <input class="form-control" asp-for="ConfirmNewPassword"/>
                <small><span asp-validation-for="ConfirmNewPassword"></span></small>
            </div>
        </div>
        
        <div class="row">
            <div class="col-6 col-sm-4 col-md-4 col-lg-4 form-group">
                <label asp-for="CurrentPassword"></label>
                <input class="form-control" asp-for="CurrentPassword"/>
                <small><span asp-validation-for="CurrentPassword"></span></small>
            </div>
        </div>
        
        <button class="btn btn-primary" type="submit">Confirm</button>

    </form>
</div>


